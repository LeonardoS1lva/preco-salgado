<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:padding="8dp"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/txt_quantidade_salgados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Informe a quantidade de salgados:"
        android:textSize="24sp"
        android:textColor="@color/colorDivider"/>

    <EditText
        android:id="@+id/edit_value"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="30sp"
        android:textAlignment="center"
        android:inputType="numberSigned"
        android:layout_below="@id/txt_quantidade_salgados"
        android:textColor="@color/colorPrimaryText"/>

    <View
        android:id="@+id/valor_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/edit_value"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor Cru:"
        android:layout_below="@id/valor_view"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/colorDivider"/>
    <TextView
        android:id="@+id/text_cru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valor_cru"
        android:layout_below="@id/valor_view"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/colorRed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor Frito:"
        android:layout_below="@id/text_cru"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/colorDivider"/>

    <TextView
        android:id="@+id/text_frito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valor_frito"
        android:layout_below="@id/text_cru"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/colorRed"/>

    <Button
        android:id="@+id/button_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:padding="24dp"
        android:text="Calcular"
        android:textColor="@color/colorTextWhite"
        android:textSize="18sp" />

</RelativeLayout>